{
  "name": "devops-wiki-better",
  "version": "1.0.0",
  "description": "A clone of Azure DevOps Wiki with enhanced features",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "tsx watch backend/src/server.ts",
    "dev:frontend": "vite --config frontend/vite.config.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:backend": "tsc --project backend/tsconfig.json",
    "build:frontend": "tsc --project frontend/tsconfig.json && vite build --config frontend/vite.config.ts",
    "start": "node backend/dist/server.js",
    "preview": "vite preview --config frontend/vite.config.ts",
    "lint": "eslint frontend/src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "jest"
  },
  "keywords": ["wiki", "devops", "markdown", "typescript", "react", "express"],
  "author": "Dominic MÃ¼ller",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0",
    "fs-extra": "^11.1.1",
    "chokidar": "^3.5.3",
    "gray-matter": "^4.0.3",
    "marked": "^9.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "@monaco-editor/react": "^4.5.2",
    "axios": "^1.5.0",
    "react-markdown": "^8.0.7",
    "remark-gfm": "^3.0.1",
    "rehype-raw": "^6.1.1",
    "lucide-react": "^0.263.1",
    "@headlessui/react": "^1.7.17",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/multer": "^1.4.7",
    "@types/uuid": "^9.0.2",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "jest": "^29.6.2",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "vite": "^4.4.5",
    "tailwindcss": "^3.3.3",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.28"
  }
}
